@{
    ViewBag.Title = "Student SPA";
}

<h2>Students</h2>

<div data-bind="if: displayIndex">
    <p>
        <input type="button" value="Create" class="btn createBtn" />
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Enrollment Date
                </th>
                <th>
                    Courses
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody data-bind="foreach: viewModel.students">
            <tr>
                <td data-bind="text: FirstName"></td>
                <td data-bind="text: LastName"></td>
                <td data-bind="text: moment(EnrollmentDate).format('L')"></td>
                <td>
                    <ul data-bind="foreach: Courses" class="list-unstyled">
                        <li data-bind="text: $data"></li>
                    </ul>
                </td>
                <td>
                    <input type="button" class="btn editBtn" value="Edit" />
                    <input type="button" class="btn" value="Delete" data-bind="click: deleteItem" />
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div data-bind="ifnot: displayIndex" class="panel">
    <div id="editorHeader" class="panel-heading">
        Create or Edit Student Info
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label class="col-md-2">First Name</label>
            <input type="text" data-bind="value: editor.firstName" />
        </div>
        <div class="form-group">
            <label class="col-md-2">Last Name</label>
            <input type="text" data-bind="value: editor.lastName" />
        </div>
        <div class="form-group">
            <label class="col-md-2">Enrollment Date</label>
            <input type="text" data-bind="value: editor.enrollmentDate" />
        </div>
        <button class="btn col-md-2 saveBtn" data-bind="click: saveItem">Save</button>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/studentSPA.js"></script>